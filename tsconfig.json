{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,

    "jsx": "react",

    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,

    "declaration": true,
    "sourceMap": true,

    "isolatedModules": false,
    "module": "commonjs",
    "outDir": "./dist/"

  },
  "include": [
    "src/index.ts"
  ]
}
